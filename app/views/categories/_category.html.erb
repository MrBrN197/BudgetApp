<div class="category-box">
  <div class="category">
    <% if category.icon.representable? %>
      <%= image_tag category.icon, class: 'icon' %>
    <% end %>
    <p>
      <strong>Name:</strong>
      <%= category.name %>
    </p>
  </div>
  <% if category.records.count.positive? %>
    <ul class="records">
      <% render category.first_three_transactions, layout: 'box' %>
    </ul>
  <% end %>
</div>